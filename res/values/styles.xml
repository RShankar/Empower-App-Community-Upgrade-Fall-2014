<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        

    </style>
    
    <style name="MyActionBar"  parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#5fc5f0</item>
        
    	    
    </style>
    
    <style name="DefaultLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="DefaultButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/basic_button_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@color/basic_button_bg</item>
        <item name="android:paddingTop">3dp</item>
    </style>
    <style name="DefaultInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>
    
    <style name="CommentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="DefaultTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008aff</item>
    </style>
    
    <style name="DefaultCommentUserName">
        <item name="android:textColor">#6c6c6c</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DefaultCreatedAt">
        <item name="android:textColor">#a4a4a4</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    
    <style name="DefaultCommentContent">
        <item name="android:textColor">#000000</item>
    </style>

</resources>

