<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <!-- Comment Indentation: set background color to desired line color  -->  
    <View android:id="@+id/left_indent1"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent2"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent3"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent4"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent5"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent6"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent7"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
    <View android:id="@+id/left_indent8"
    	android:layout_width="1dp"
    	android:layout_height="fill_parent"
    	android:layout_marginLeft="5dp"
    	android:layout_marginRight="4dp"
    	android:visibility="gone"
    	/>
	<LinearLayout
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center_vertical"
	    android:layout_gravity="center_vertical"
	    android:padding="5dp"
	    >
	    <TextView
	        android:id="@+id/score"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:text="0"
	        />
	</LinearLayout>
	
	<LinearLayout
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:layout_marginBottom="5dp"
	        android:layout_marginTop="5dp"
	        android:orientation="horizontal">
	        <TextView
		        android:id="@+id/comment_by"
		        style="@style/DefaultCommentUserName"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	        />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:layout_marginBottom="5dp"
	        android:layout_marginTop="5dp"
	        android:orientation="horizontal">
	        <TextView
		        android:id="@+id/comment_content"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        style="@style/DefaultCommentContent"
	        />
	    </LinearLayout>
	    
	    
	    <LinearLayout 
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"
	        android:orientation="horizontal"
	        >
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.9">
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/upvote_btn"
		            android:padding="2dp"
		            android:focusable="false"
		            android:src="@drawable/arrow_up2"/>
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/downvote_btn"
		            android:padding="2dp"
		            android:layout_marginLeft="5dp"	
		            android:focusable="false"
		            android:src="@drawable/arrow_down2"/>
	        </LinearLayout>
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/comment_reply"
	            android:layout_gravity="right"
	            android:layout_weight="0.1"
	            android:layout_marginEnd="10dp"
	            android:src="@drawable/reply" />
	    </LinearLayout>
	</LinearLayout>
    
    
</LinearLayout>
